    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ansible: Debug Current Playbook",
            "type": "ansibug",
            "request": "launch",
            "playbook": "${file}"
        },
        {
            "type": "ansibug",
            "request": "launch",
            "name": "Ask for playbook.",
            "playbook": "${workspaceFolder}/${command:AskForPlaybook}",
            "stopOnEntry": true
        }
    ]
}